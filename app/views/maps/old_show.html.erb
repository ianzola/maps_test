	<script type="text/javascript">
	var map;
	var poly;
	var pathcoordinates;
	function initialize() {
		var a = new Array();
		if (GBrowserIsCompatible()) {
			a[0] = new GLatLng(37.80437,-122.27080);
			a[1] = new GLatLng(19.89868,-155.66586)
			a[2] = new GLatLng(-18.14260,178.43100);
			a[3] = new GLatLng(-27.46758,153.02789);

				map = new GMap2(document.getElementById("map_canvas"));
				map.setMapType(G_NORMAL_MAP);			
				
				//line = new google.maps.Polyline({path: a, strokeColor: "FF3300"});
				//line.setMap(map);	

