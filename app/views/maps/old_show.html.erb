				//google.maps.event.addListener(map,'click',function(event){placeMarker(event);});	

				var triangle = new Array();
				triangle[0] = new GLatLng(27.84655,-174.1228);
				triangle[1] = new GLatLng(-21.1176,-167.2674);
				triangle[2] = new GLatLng(7.3708,-106.0955);
				triangle[3] = new GLatLng(27.84655,-174.1228);
				map.setCenter(a[1], 3);
				polygon = new GPolygon(triangle,"#3333ff", 3, 1, "#99ccff", 0.2);
				map.addOverlay(polygon);
				
				map.setUIToDefault();
				}
			}

			function placeMarker(event){
				position = event.latLng;
				mark = new google.maps.Marker({map: map, position: position});
				mark.setMap(map);	

				path = poly.getPath();
				path.insertAt(path.length,position);

				mark.setTitle("#" + position);
			}


			</script>
		</head>
		<body style="margin:0px; padding:0px;" onload="initialize()"  onunload="GUnload()">
